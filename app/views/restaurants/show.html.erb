<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= @restaurant.address %> <%= @restaurant.phone_number %></p>
<p><% @restaurant.reviews.each do |review| %>
  <%= '⭐️' * review.rating %>
  <br>
  <%= review.content %>
  <% end %>
</p>

<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>

<%= link_to 'Back to restaurants list', restaurants_path %>
